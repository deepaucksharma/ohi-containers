# Set default behavior to automatically normalize line endings
* text=auto

# Explicitly declare text files with specific line ending normalization
*.sh text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.md text eol=lf
*.json text eol=lf
*.conf text eol=lf
*.sql text eol=lf
*.cnf text eol=lf

# Declare scripts that should maintain LF endings
/scripts/* text eol=lf
/testing/tests/**/*.sh text eol=lf
/testing/lib/*.sh text eol=lf
/testing/bin/*.sh text eol=lf
